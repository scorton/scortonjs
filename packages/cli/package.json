{
  "name": "@scorton/cli",
  "version": "0.1.0",
  "description": "ScortonJS CLI with Python providers (MVP)",
  "type": "module",
  "bin": {
    "scorton": "./bin/scorton.mjs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:rust": "cd ../rust-core && cargo build --release",
    "build:napi": "cd ../rust-core/crates/scorton-napi && npm run build",
    "build:all": "npm run build:rust && npm run build:napi && npm run build",
    "dev": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "zod": "^3.23.8",
    "@scorton/rust-core": "workspace:*"
  },
  "optionalDependencies": {
    "@scorton/rust-core-darwin-arm64": "*",
    "@scorton/rust-core-darwin-x64": "*",
    "@scorton/rust-core-linux-x64-gnu": "*",
    "@scorton/rust-core-win32-x64-msvc": "*"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.6.3",
    "@types/node": "^22.7.4"
  }
}

